#!/usr/bin/env bash
# Immediately purge all trash (bypassing grace period) containing stale memories
#   (based on per-backend staleness thresholds in configs)
#
# Usage:
#   beehive-empty-trash

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_ROOT="$(dirname "$SCRIPT_DIR")"

cd "$REPO_ROOT"
uv run sweep-hive --empty-trash "$@"
